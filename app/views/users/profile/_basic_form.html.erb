<%= form_for @user, method: :put, remote: true, html: { class: "form-horizontal" } do |f| %>
  <%= hidden_field_tag :type, 'basic'  %>
  <div class="form-group">
    <%= f.label :name, '用户名', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name, required: true,  class: 'form-control', autofocus: true  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Email', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.email_field :email, disabled: true,  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit '保存', class: 'btn btn-primary'  %>
    </div>
  </div>
<% end %>