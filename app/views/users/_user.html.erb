<div class="user" id="user-<%= user.id %>">
	<div class="row title">
		<div class="col-xs-4 user-avatar">
			<%= image_tag user.pic, class: 'user-avatar-section' %>
		</div>
		<div class="col-xs-8 user-info">
			<div class="name row">
				<div class="col-xs-2 user-industry">
					<%= user.industry.abbr %>
				</div>
				<div class="col-xs-10 user-name">
					<%= user.name %>
				</div>
			</div>
			<div class="work">
				<span><%= user.corp %></span>
				<span><%= user.position %></span>
			</div>
		</div>
	</div>
	<div class="user-skill">
		技能： <%= user.skill %>
	</div>
	<div class="user-desc">
		个人介绍： <%= user.desc %>
	</div>
	<div class="invitation row">
		<div class="col-xs-4 comments">
			<span>8</span> <i class="mdi-communication-textsms"></i>
		</div>
		<div class="col-xs-6 col-xs-offset-2">
			<% if user_signed_in? && (current_user != user) %>
				<%= form_for Invitation.new, remote: true, data: { confirm: "你确定要约#{user.name}吗？" } do |f| %>
					<%= f.hidden_field :from_user_id, value: current_user.id %>
					<%= f.hidden_field :to_user_id, value: user.id %>
					<%= f.submit '约他喝咖啡', class: 'btn btn-info invitation-button' %>
				<% end %>
			<% else %>
				<%= link_to '约他喝咖啡', '#', class: 'btn btn-info disabled' %>
			<% end %>
		</div>
	</div>
</div>