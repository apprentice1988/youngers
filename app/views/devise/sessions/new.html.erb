<div class="panel panel-default registration-table" id='session-new'>
  <div class="panel-heading">
    <h3 class="panel-title" style="text-align: center;">欢迎您回来</h3>
  </div>
  <div class="panel-body">
  	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  		<fieldset>
  			<div class="form-group">
	      	<%= f.label :email, 'Email', class: 'col-lg-2 control-label' %>
	        <div class="col-lg-10">
	        	<%= f.email_field :email, required: true,  class: 'form-control' %>
	        </div>
	      </div>
	      <div class="form-group">
	      	<%= f.label :password, '密码', class: 'col-lg-2 control-label' %>
	        <div class="col-lg-10">
	        	<%= f.password_field :password, required: true, placeholder: '最少六个字符',  class: 'form-control'  %>
	        	<div class="checkbox" id='remeber_me_check'>
              <label>
                <%= check_box_tag "#{resource}", :remember_me %> 记住我
              </label>
            </div>
	        </div>
	      </div>
	      <div class="form-group">
	        <div class="col-lg-10 col-lg-offset-2">
	          <%= f.submit '确认提交', class: 'btn btn-primary'  %>
	        </div>
	      </div>
  		</fieldset>
  	<% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
