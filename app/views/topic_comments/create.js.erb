<% if @topic_comment.level == 0 %>
  $(".comment-list").append("<%= j render 'top_comment', top_comment: @topic_comment %>");
  $("#topic_comment_content").val('');
<% else %>
  $("#comment-<%= @topic_comment.parent_id %>-tiny-comment-list").find('#new_topic_comment').remove();
  $("#comment-<%= @topic_comment.parent_id %>-tiny-comment-list").append("<%= j render 'topic_comments/tiny_comment', tiny_comment: @topic_comment %>");
<% end %>