<div id="registration-user-avatar">
  <button id="avatar_upload_button">上传图片</button>
</div>
<%= form_for(@registration, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <fieldset>
      <div class="form-group">
      	<%= f.label :name, '用户名', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.text_field :name, required: true,  class: 'form-control', autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :email, 'Email', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.email_field :email, required: true,  class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :password, '密码', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.password_field :password, required: true,  class: 'form-control'  %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :password_confirmation, '确认密码', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.password_field :password_confirmation, required: true,  class: 'form-control'  %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :corp, '工作单位', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.text_field :corp, required: true,  class: 'form-control', placeholder: '例如：谷歌(或者某个学校)'  %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :position, '职位', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.text_field :position, required: true,  class: 'form-control', placeholder: '例如：前端开发工程师'  %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :skill, '技能', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.text_field :skill, required: true,  class: 'form-control', placeholder: '例如：前端MVC使用, 移动应用开发'  %>
        </div>
      </div>
      <div class="form-group">
      	<%= f.label :desc, '个人介绍', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        	<%= f.text_area :desc,  class: 'form-control', placeholder: '例如：爱好交朋友, 喜欢产品, 创业'  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <button class="btn btn-default">取消</button>
          <%= f.submit '确认提交', class: 'btn btn-primary'  %>
        </div>
      </div>
    </fieldset>
	<% end %>