<% if @can_up %>
  <% if @from == 'topic_show' %>
    $(".topic-show #up-button-<%= @topic.id %>").css('color', '#DA552F');
    $(".topic-show #up-button-<%= @topic.id %>").find('p').html("<%= @topic.up_count %>");
  <% end %>
  $(".topics-index #up-button-<%= @topic.id %>").css('color', '#DA552F');
  $(".topics-index #up-button-<%= @topic.id %>").find('p').html("<%= @topic.up_count %>");
<% end %>
$(".voter-list").html("<%= j render 'show_voters_voter_list' %>");