<% if code.group_code %>
  <div class="single-code row">
    <div class="col-xs-3"><%= code.code %></div>
    <div class="col-xs-9">
      <span>已被</span>
      <%= code.used_by_ids.count %>人使用
    </div>
  </div>
<% else %>
  <div class="single-code row">
    <div class="col-xs-3"><%= code.code %></div>
    <div class="col-xs-9">
      <% if code.used_by_ids.any? %>
        <% use_code_user = User.find(code.used_by_ids.first) %>
        <span>已被</span>
        <%= image_tag use_code_user.pic('50') %> @<%= use_code_user.name %>使用
      <% else %>
        未被使用
      <% end %>
    </div>
  </div>
<% end %>