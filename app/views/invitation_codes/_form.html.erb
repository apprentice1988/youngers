<%= form_for @invitation_code, remote: true, html: {class: 'form-horizontal'} do |f| %>
  <fieldset>
    <%= f.hidden_field :group_code, value: true %>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-4">
        <%= f.text_field :code, required: true,  class: 'form-control' %>
      </div>
      <div class="col-lg-4">
        <%= f.submit '确认提交', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>